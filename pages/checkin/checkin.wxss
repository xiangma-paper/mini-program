.container {
  padding: 40rpx;
}

input {
  border: 1px solid darkgray;
  height: 60rpx;
}

textarea {
  border: 1px solid darkgray;
  height: 480rpx;
  width: 100%;
}

.flex-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.flex-row label {
  width: 80rpx;
}
.flex-row input {
  flex-grow: 1;
}

.attached-button {
  flex: 0 0 160rpx;
  padding: 10rpx;
  background-color: #007aff;
  color: #fff;
  width: 80rpx;
  height: 60rpx;
  border-radius: 5rpx;
  font-weight: normal;
  font-size: 28rpx;
}

.textarea-row {
  margin-bottom: 20rpx;
}

.submit-row button {
  background-color: #007aff;
  color: #fff;
  width: 120rpx;
  height: 80rpx;
  padding: 15rpx;
  border-radius: 5rpx;
  font-weight: normal;
  font-size: 36rpx;
}