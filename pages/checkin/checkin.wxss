.container {
  padding: 40rpx;
  font-size: small;
}

.section {
  margin-bottom: 30rpx;
  border: 1px solid darkgray;
  background-color: #ddd;
  border-radius: 20rpx;
  padding: 30rpx 20rpx 10rpx 20rpx;
}

@media (prefers-color-scheme: dark) {
  .section {
    background-color: #333;
  }
}

input {
  border: 1px solid darkgray;
  background-color: #eee;
  height: 50rpx;
}

textarea {
  border: 1px solid darkgray;
  background-color: #eee;
  height: 320rpx;
  width: 100%;
}

.flex-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.flex-row label {
  width: 70rpx;
}
.flex-row input {
  flex-grow: 1;
}

.attached-button {
  flex: 0 0 120rpx;
  height: 70rpx;
  padding: 10rpx;
  line-height: 50rpx;
  background-color: #00a000;
  color: #fff;
  border-radius: 5rpx;
  font-weight: normal;
  font-size: smaller;
}

.textarea-row {
  margin-bottom: 20rpx;
}

.textarea-row .comment-label-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.textarea-row .comment-label-row .comment-label {
  flex-grow: 1;
  text-align: left;
}

.textarea-row .comment-label-row .comment-by-gpt {
  flex: 0 0 150rpx;
  text-align: center;
  height: 70rpx;
  padding: 10rpx;
  line-height: 50rpx;
  background-color: #00a000;
  color: #fff;
  border-radius: 5rpx;
  font-weight: normal;
  font-size: smaller;
}

.submit-row {
  display: block;
  text-align: center;
}

.flex-row button#submit {
  flex: 0 0 160rpx;
  background-color: #00a000;
  color: #fff;
  height: 70rpx;
  padding: 10rpx;
  line-height: 50rpx;
  border-radius: 5rpx;
  font-weight: normal;
  font-size: smaller;
}

.input-ok {
  border-color: darkgray;
}

.input-error {
  border-color: red;
}